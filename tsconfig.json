{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "assets": ["assets/*"],
      "components": ["components/*"],
      "pages": ["pages/*"],
      "styles": ["styles/*"],
      "utils": ["utils/*"],
      "configs": ["configs/*"]
    }
  }
}
